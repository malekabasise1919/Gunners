{% extends 'base.html.twig' %}
{% block content %}
{% block connexion%}  {% endblock%}
		<div class="title-bar">			
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<ol class="title-bar-text">
							<li class="breadcrumb-item"><a href="index.html">Home</a></li>
							<li class="breadcrumb-item active" aria-current="page">Sign Up</li>
						</ol>
					</div>		
				</div>		
			</div>		
		</div>
		<!-- Title Start -->
		<!-- Body Start -->	
    

						
<main class="browse-section">				
			<div class="container">
				<div class="row justify-content-md-center">					
					<div class="col-md-6">
						<div class="lg_form">
							<div class="main-heading">
								<h2>Sign Up to LanciTounsi</h2>
								<div class="line-shape1">
									<img src="images/line.svg" alt="">
								</div>
							</div>
                            {{ form_start(form)}}
							<div class="form-group">
								<label class="label15">Email Address*</label>
                                 {{ form_widget(form.email,{'attr':{ 'placeholder': 'toto@example.com' ,'class': 'job-input' }})}}
                                 <div style="color:red">{{ form_errors(form.email) }} </div>
								
							</div>
							<div class="form-group">
								<label class="label15">Password*</label>
                                {{ form_widget(form.password,{'attr':{ 'placeholder': 'mot de passe' ,'class': 'job-input' }})}}
								<div style="color:red">{{ form_errors(form.password) }} </div>
								
							</div>
							<div class="form-group">
								<label class="label15">Confirm Password*</label>
                                {{ form_widget(form.confirm_password,{'attr':{ 'placeholder': 'mot de passe' ,'class': 'job-input' }})}}
								<div style="color:red">{{ form_errors(form.confirm_password) }} </div>
								
							</div>
							<div class="ui checkbox apply_check check_out checked">
								<input type="checkbox" tabindex="0" class="hidden">
								<label style="color:#242424 !important;">I accept the Terms of Services</label>
							</div>
							<button type="submit" class="lr_btn">Next</button>
							 {{ form_end(form)}}
							<div class="done140">
								Already have an account?<a href="{{ path('login')}}">Sign in Now<i class="fas fa-angle-double-right"></i></a>
							</div>
						</div>						
					</div>																																										
				</div>				
			</div>					
		</main>
		<!-- Body End -->
		<!-- footer Start -->
    


{% endblock %}
