{% extends 'Back/backk.html.twig' %}

{% block title %}Contrat index{% endblock %}

{% block content %}



    <!-- Body Start -->
    <main class="browse-section">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="main-heading bids_heading">
                        <h2>contrat</h2>
                        <div class="line-shape1">
                            <img src="images/line.svg" alt="">
                        </div>
                    </div>
                    <div class="post501">

                        <div class="row">
                            <div class="col-lg-6">
                                {{ form_start(form) }}

                                <div class="form-group">
                                    {{ form_label(form.prix,'prix',{'attr':{'class':'label15'}}) }}
                                    {{ form_widget(form.prix,{'attr':{'class':'job-input'}}) }}


                                </div>
                                <div style="color: red">{{ form_errors(form.prix) }}</div>

                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    {{ form_label(form.statut,'statut',{'attr':{'class':'label15'}}) }}
                                    {{ form_widget(form.statut,{'attr':{'class':'job-input'}}) }}
                                    <div style="color: red">{{ form_errors(form.statut) }}</div>

                                </div>
                            </div>


                            <button  type="submit" class="post_jp_btn"  formnovalidate>Modifier</button>

                        </div>
                        {{ form_end(form) }}

                    </div>
                </div>

            </div>
        </div>
    </main>
    <!-- Body End -->
{% endblock %}