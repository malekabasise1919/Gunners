{% extends 'base.html.twig' %}
{% block title %}Project Single View{% endblock %}
{% block content %}

    <!-- Body Start -->
    <main class="browse-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-8">
                    <div class="view_details">
                        <ul>
                            <li>
                                <div class="vw_items">
                                    <i class="fas fa-eye"></i>
                                    <div class="vw_item_text">
                                        <h6>Views</h6>
                                        <span>135</span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="vw_items">
                                    <i class="fas fa-shield-alt"></i>
                                    <div class="vw_item_text">
                                        <h6>Verify</h6>
                                        <span>Yes</span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="vw_items">
                                    <i class="far fa-money-bill-alt"></i>
                                    <div class="vw_item_text">
                                        <h6>Budget</h6>
                                        <span>${{ project.getMinSalaire() }} - ${{ project.getMaxSalaire() }}</span>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="vw_items">
                                    <i class="far fa-clock"></i>
                                    <div class="vw_item_text">
                                        <h6>Posted Date</h6>
                                        <span>4 days ago</span>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="job-item ptrl_2 mt-20">
                        <div class="job-top-dt">
                            <div class="job-left-dt">
                                <img src="images/homepage/latest-jobs/img-1.jpg" alt="">
                                <div class="job-ut-dts">
                                    <a href="#"><h4>{{ project.getUser().getNom() }}</h4></a>
                                    <span><i class="fas fa-map-marker-alt"></i> New York City</span>
                                </div>
                            </div>
                            <div class="job-right-dt">
                                <div class="job-price">${{ project.getMinSalaire() }} - ${{ project.getMaxSalaire() }}</div>
                            </div>
                        </div>
                        <div class="job-des-dt">
                            <h4>{{ project.getNom() }}</h4>
                            <p>{{ project.getDescription() }}</p>

                            <div class="job-skills">
                                {% for skills in project.getCompetences() %}
                                    <a href="#">{{ skills.getNom() }}</a>

                                {% endfor %}
                            </div>

                        </div>
                        <div class="job_dts">
                            <h4>Attachments</h4>
                            <ul class="download_files">
                                {% for file in project.getFichiers() %}
                                <li>
                                    <div class="dwn_fls">
                                        <div class="dwn-header">
                                            <h6>{{ file.nom }}</h6>
                                        </div>
                                        <div class="dwn-footer">
                                            <span>PDF</span>
                                            <button class="download_button"><i class="fas fa-download"></i></button>
                                        </div>
                                    </div>
                                </li>
            {% endfor %}
                            </ul>
                        </div>
                    </div>
                    <div class="find-lts-jobs">
                        <div class="main-heading bids_heading">
                            <h2>Freelancers Bidding</h2>
                            <div class="line-shape1">
                                <img src="images/line.svg" alt="">
                            </div>
                        </div>
                        <div class="freelancers_bidings">
                             {% for freelancer in project.getPropositions() %}
                            <div class="job-item mt-30">
                                <div class="job-top-dt">
                                    <div class="job-left-dt">
                                        <img src="images/homepage/latest-jobs/img-1.jpg" alt="">
                                        <div class="job-ut-dts">
                                            <a href="#"><h4>{{ freelancer.getUser().getNom }}</h4></a>
                                            <span><i class="fas fa-map-marker-alt"></i> India</span>
                                            <div class="star mt-2">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <span>4.9</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="job-right-dt job-right-dt78">
                                        <div class="job-price job-price78">{{ freelancer.getPrix() }}$</div>
                                        <div class="job-fp dy_cl">in 5 days</div>
                                    </div>
                                </div>
                            </div>

                            {% endfor %}

                        </div>
                    </div>
                </div>
                {% if app.user and verifProp is  null %}
                    <div class="col-lg-3 col-md-4 mainpage">
                        <div class="total_days mtp_30">4 days 5 hours left</div>
                        <h4 class="bid_title">Bid Now This Job</h4>
                        <div class="bid_amount">
                            <div class="fltr-items-heading">
                                <div class="fltr-item-left">
                                    <h6>Set Your Minimal Rate <span>($)</span></h6>
                                </div>

                            </div>
                            {{ form_start(form)}}

                            <div class="form-group">
                                <label class="label15">Prix</label>

                                <div class="smm_input">
                                    {{ form_widget(form.prix,{'attr':{ 'placeholder': 'Max' ,'class': 'job-input' }})}}
                                    <div style="color: red">{{ form_errors(form.prix) }}</div>
                                    <div class="mix_max">TND</div>
                                </div>
                                <label class="label15">Date Max*</label>
                                <div class="smm_input">
                                    {{ form_widget(form.date_max,{'attr':{ 'placeholder': 'Max' ,'class': 'job-input' }})}}
                                    <div style="color: red">{{ form_errors(form.date_max) }}</div>

                                </div>


                                <button class="apply_job_rt" type="submit">PLACE A BID</button>
                                {{ form_end(form)}}
                                <div class="bookmark_rt"><button class="bookmark1 mr-3" title="bookmark"><i class="fas fa-heart"></i></button>BOOKMARK</div>
                                <ul class="social-links">
                                    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fab fa-google-plus-g"></i></a></li>
                                    <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                </ul>
                            </div>


                        </div>
                    </div>

                {% elseif verifProp is not null %}

                <div class="col-lg-3 col-md-4 mainpage">
                    <div class="total_days mtp_30">4 days 5 hours left</div>
                    <h4 class="bid_title">you have already placed a Bid</h4>
                </div>

                {% endif %}

    </main>

    <!-- Body End -->

{% endblock %}
